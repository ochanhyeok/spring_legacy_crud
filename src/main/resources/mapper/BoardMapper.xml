<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.crud_ex.mapper.BoardMapper">

    <!-- ResultMap -->
    <resultMap id="boardResultMap" type="Board">
        <id property="boardId" column="board_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="writer" column="writer"/>
        <result property="regDate" column="reg_date"/>
        <result property="updateDate" column="update_date"/>
        <result property="viewCnt" column="view_cnt"/>
    </resultMap>

    <!-- 목록 조회 -->
    <select id="findAll" resultType="Board">
        SELECT * FROM board
        ORDER BY board_id DESC
    </select>

    <!-- 검색 목록 조회 (동적 SQL) -->
    <select id="findBySearch" parameterType="SearchCriteria" resultMap="boardResultMap">
        SELECT * FROM board
        <where>
            <if test="searchType != null and keyword != null and keyword != ''">
                <choose>
                    <when test="searchType == 'title'">
                        title LIKE CONCAT('%', #{keyword}, '%')
                    </when>
                    <when test="searchType == 'writer'">
                        writer LIKE CONCAT('%', #{keyword}, '%')
                    </when>
                    <when test="searchType == 'content'">
                        content LIKE CONCAT('%', #{keyword}, '%')
                    </when>
                    <when test="searchType == 'titleOrContent'">
                        (title LIKE CONCAT('%', #{keyword}, '%')
                        OR content LIKE CONCAT('%', #{keyword}, '%'))
                    </when>
                </choose>
            </if>
        </where>
        ORDER BY board_id DESC
    </select>

    <!-- 한 건 조회 -->
    <select id="findOne" resultType="Board" resultMap="boardResultMap">
        SELECT * FROM board
        WHERE board_id = #{boardId}
    </select>

    <!-- 등록 -->
    <insert id="save" useGeneratedKeys="true" keyProperty="boardId">
        INSERT INTO board(title, content, writer)
        VALUES (#{title}, #{content}, #{writer})
    </insert>

    <!-- 수정 -->
    <update id="update">
        UPDATE board
        SET title = #{title},
            content = #{content}
        WHERE board_id = #{boardId}
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM board
        WHERE board_id = #{boardId}
    </delete>

    <!-- 총 개수 -->
    <select id="getTotalCount" resultType="int">
        SELECT COUNT(*) FROM board
    </select>

    <!-- 조회수 증가 -->
    <update id="updateViewCnt" parameterType="long">
        UPDATE board
        SET view_cnt = IFNULL(view_cnt, 0) + 1
        WHERE board_id = #{boardId}
    </update>


</mapper>